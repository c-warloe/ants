colony: same_pheromone_type_test

start:
    emitPheromone 1
    moveForward
    emitPheromone 2 // 2 = runs; 1 = spins
    rotateClockwise
    moveForward
    rotateClockwise
    moveForward //
    rotateClockwise
    rememberPheromone 1
    rotateClockwise
    moveForward
    rotateCounterClockwise
    if same_pheromone_type then goto spin
    goto run

run:
    moveForward
    goto run
    
spin:
    rotateClockwise
    goto spin